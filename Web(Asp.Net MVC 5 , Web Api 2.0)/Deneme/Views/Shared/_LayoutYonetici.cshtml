@using Deneme.Models;
@{ 
    teacher teacher = (teacher)Session["user"];
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>!Here Barkod Tabanlı Yoklama Sistemi</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/css/font-awesome.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
   
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand bg-white navbar-light border-bottom">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/admin/index" class="nav-link">Anasayfa</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <a href="/Admin/Index" class="brand-link">
                    <img src="~/Content/Images/logo_square.png" alt="Here Logo" class="brand-image img-circle elevation-3"
                         style="opacity: .8">
                    <span class="brand-text font-weight-light">!Here</span>
                </a>


                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="info">
                        <img src="~/Content/Images/erdi_yalcin.jpg" alt="Here Logo" class="brand-image img-circle elevation-3"
                             style="opacity: .8" width="15" height="15">
                        <p style="color:white"> Hoşgeldiniz </p>
                        <p style="color:white">Dr.Ögr.Üyesi @teacher.teacher_name @teacher.teacher_surname </p>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/Admin/Index" class="nav-link">
                                <i class="nav-icon fa fa-th"></i>
                                <p>
                                    Anasayfa
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Admin/Students" class="nav-link">
                                <i class="nav-icon fa fa-tag"></i>
                                <p>
                                    Ogrenciler
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Lessons" class="nav-link">
                                <i class="nav-icon fa fa-angle-up"></i>
                                <p>
                                    Dersler
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Barcode" class="nav-link">
                                <i class="nav-icon fa fa-barcode"></i>
                                <p>
                                    Barkod Oluşturma
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Sessions" class="nav-link">
                                <i class="nav-icon fa fa-server"></i>
                                <p>
                                    Oturumlar
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark"><b>!Here Yönetim Paneli</b></h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">admin</a></li>
                                <li class="breadcrumb-item active">users</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            @RenderBody()
        </div>
    </div>
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
        <div class="p-3">
            <h5></h5>
            <p>Sidebar content</p>
        </div>
    </aside>
    <!-- /.control-sidebar -->
    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="float-right d-none d-sm-inline">
            <strong>!Here...</strong>
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2014-2018 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
    </footer>
    
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <!-- Bootstrap 4 -->
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/jquery.slimscroll.js"></script>
